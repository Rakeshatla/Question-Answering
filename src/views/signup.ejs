    <script src="https://kit.fontawesome.com/f6d53f6a14.js" crossorigin="anonymous"></script>
</head>
<body>
    <main class="main-content">
        <div class="register-box">
            <form action="/signup" method="post" name="Formfill"  onsubmit="return validation()">
                <h1>Register</h1>
                <p id="result"></p>
                    <div class="input-field">
                        <i class="fa-solid fa-user"></i>
                        <label for="name"></label>
                        <input type="text" placeholder="Name" id="name" name="username" required autocomplete="off">
                    </div>    
                    <div class="input-field">
                        <i class="fa-solid fa-envelope"></i>
                        <label for="email"></label>
                        <input type="email" placeholder="E-mail" id="email" name="email" required>
                    </div>
                    <div class="input-field">
                        <i class="fa-solid fa-user"></i>
                        <label for="domain"></label>
                        <input type="text" placeholder="Domain" id="domain" name="domain" required autocomplete="off">
                    </div>  
                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <label for="password"></label>
                        <input type="password" placeholder="password" id="password" name="password" required >
                    </div> 
                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <label for="cpassword"></label>
                        <input type="password" placeholder="confirm password" id="cpassword"  name="cpassword" >
                    </div> 
                    <div class="button">
                        <input  type="submit" class="btn" value="Register">     
                    </div>  
                    <div class="group">
                        <span><a href="">Forget password</a></span>
                        <span><a href="/login">Log in</a></span>
                    </div> 
            </form>
        </div>
    </main>
<script src="registration.js"></script>
</body>
</html>